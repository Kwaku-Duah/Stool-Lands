// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ROLE {
  ADMIN
  CHIEF
  SECRETARY
  INSPECTOR
  APPLICANT
}

model User {
  id             Int     @id @default(autoincrement())
  username       String
  email          String  @unique
  password       String
  role           ROLE
  phoneNumber    String  @unique
  changePassword Boolean @default(true)
}

model Admin {
  id    Int    @id @default(autoincrement())
  email String @unique
}
